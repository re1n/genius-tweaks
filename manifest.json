{
	"manifest_version": 3,
	"name": "Genius Tweaks",
	"version": "1.1.8",
	"description": "Some (potentially) useful tweaks for Genius",
	"icons": {
		"16": "16.png",
		"32": "32.png",
		"48": "48.png",
		"128": "128.png"
	},
	"action": {
		"default_popup": "popup.html"
	},
	"permissions": [
		"storage"
	],
	"host_permissions": [
	  "*://genius.com/"
	],
	"content_scripts": [
	  {
		"matches": ["*://genius.com/*"],
		"js": ["content.js"]
	  }
	]
  }